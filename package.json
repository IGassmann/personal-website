{
  "name": "personal-website",
  "version": "2.0.0",
  "description": "Igor Gassmann's personal website built with Next.js.",
  "keywords": [
    "react",
    "nextjs",
    "vercel"
  ],
  "license": "Unlicense",
  "homepage": "https://igassmann.me/",
  "repository": "https://github.com/IGassmann/personal-website",
  "bugs": "https://github.com/IGassmann/personal-website/issues",
  "author": "Igor Gassmann <igor@igassmann.me> (https://igassmann.me)",
  "main": "n/a",
  "scripts": {
    "dev": "next dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "next lint --dir ./src/ --dir ./test/ --dir ./scripts/ --ignore-path ./.gitignore --fix",
    "format": "prettier . --ignore-path ./.gitignore --write",
    "build:sitemap": "node --loader ts-node/esm scripts/generateSitemap.ts",
    "build:feeds": "node --loader ts-node/esm scripts/generateFeeds.ts",
    "prebuild": "yarn build:sitemap & yarn build:feeds",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install"
  },
  "dependencies": {
    "dayjs": "^1.11.0",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "next": "^12.1.0",
    "next-plausible": "^3.0.1",
    "next-seo": "^4.28.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^7.1.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-directive": "^2.0.1",
    "remark-directive-rehype": "^0.4.0",
    "remark-unwrap-images": "^3.0.1",
    "sass": "^1.43.4",
    "tailwindcss": "^3.0.23"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/node": "^14.17",
    "@types/react": "^17.0.33",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.3.1",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jest-dom": "^3.9.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4",
    "eslint-plugin-testing-library": "^5.0.1",
    "feed": "^4.2.2",
    "globby": "^12.0.2",
    "husky": ">=6",
    "jest": "^27.5.1",
    "lint-staged": ">=12.1.2",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "rehype-format": "^3.1.0",
    "rehype-stringify": "^8.0.0",
    "rehype-truncate": "^1.2.2",
    "rehype-urls": "^1.1.1",
    "remark-rehype": "^8.1.0",
    "sitemap": "^7.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "unified": "^10.1.2"
  },
  "engines": {
    "node": "^14.17",
    "yarn": "^1.22.17"
  }
