{
  "name": "personal-website",
  "version": "2.0.0",
  "description": "Igor Gassmann's personal website built with Next.js.",
  "keywords": [
    "react",
    "nextjs",
    "vercel"
  ],
  "license": "Unlicense",
  "homepage": "https://igassmann.me/",
  "repository": "https://github.com/IGassmann/personal-website",
  "bugs": "https://github.com/IGassmann/personal-website/issues",
  "author": "Igor Gassmann <igor@igassmann.me> (https://igassmann.me/)",
  "main": "n/a",
  "scripts": {
    "dev": "next dev",
    "lint": "next lint --dir ./src/ --dir ./scripts/ --ignore-path ./.gitignore --fix",
    "format": "prettier . --ignore-path ./.gitignore --write",
    "build:sitemap": "node --loader ts-node/esm scripts/generateSitemap.ts",
    "build:feeds": "node --loader ts-node/esm  scripts/generateFeeds.ts",
    "prebuild": "yarn build:sitemap & yarn build:feeds",
    "build": "next build",
    "start": "next start",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "classnames": "^2.3.1",
    "dayjs": "^1.10.7",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "next": "^12.0.2",
    "next-plausible": "^3.0.1",
    "next-seo": "^4.28.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^5.0.3",
    "react-syntax-highlighter": "^15.4.4",
    "remark-directive": "^1.0.1",
    "sass": "^1.43.4",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@types/node": "^14.x",
    "@types/react": "^17.0.33",
    "@types/tailwindcss": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-config-next": "12.0.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4",
    "feed": "^4.2.2",
    "globby": "^12.0.2",
    "husky": ">=6",
    "lint-staged": ">=10",
    "next-secure-headers": "^2.2.0",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "rehype-format": "^3.1.0",
    "rehype-stringify": "^8.0.0",
    "rehype-truncate": "^1.2.2",
