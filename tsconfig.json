{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "preserve",
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }]
  },
  "include": ["**/*.ts", "**/*.tsx", "./next.config.js", "./next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["./node_modules"]
}
