{
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "scripts/**/*": "esm",
      "src/**/*": "esm"
    }
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./next.config.js",
    "./next-env.d.ts",
    "./tailwind.config.ts"
  ],
  "exclude": ["./node_modules"]
}
